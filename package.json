{
  "devDependencies": {
    "autoprefixer": "^5.2.0",
    "browserify": "^11.0.0",
    "postcss": "^4.1.16",
    "postcss-cli": "^1.5.0",
    "watchify": "^3.3.0"
  },
  "scripts": {
    "build-stylesheets": "postcss -c config/postcss.json -d staticfiles/build staticfiles/stylesheets/app.css",
    "watch-stylesheets": "postcss -w -c config/postcss.json -d staticfiles/build staticfiles/stylesheets/app.css",
    "build-javascripts": "browserify staticfiles/javascripts/app.js > staticfiles/build/app.js",
    "watch-javascripts": "watchify staticfiles/javascripts/app.js -o staticfiles/build/app.js -dv",
    "watch": "npm run watch-javascripts & npm run watch-stylesheets & npm run livereload",
    "build": "npm run build-javascripts && npm run build-stylesheets",
    "livereload": "livereload ./staticfiles"
  }
}
